{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2016",
    //"module": "system",
    "moduleResolution": "node",
    "pretty": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "inlineSources": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "jsx": "preserve"
    //"noEmit": true,
    //"preserveConstEnums": true,
    //"removeComments": false
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
